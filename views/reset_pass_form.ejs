<style>
  body {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .feed-form {
    padding: 12px;
    margin-top: 36px;
    display: flex;
    flex-direction: column;
    width: 300px;
    box-shadow: 0px 106px 42px rgba(0, 0, 0, 0.01),
      0px 59px 36px rgba(0, 0, 0, 0.05), 0px 26px 26px rgba(0, 0, 0, 0.09),
      0px 7px 15px rgba(0, 0, 0, 0.1), 0px 0px 0px rgba(0, 0, 0, 0.1);
  }

  .feed-form input {
    height: 54px;
    border-radius: 5px;
    background: white;
    margin-bottom: 15px;
    border: none;
    padding: 0 20px;
    font-weight: 300;
    font-size: 14px;
    color: #4b4b4b;
  }

  .button_submit:hover,
  .feed-form input:hover {
    transform: scale(1.009);
    box-shadow: 0px 0px 3px 0px #212529;
  }

  .button_submit {
    width: 100%;
    height: 54px;
    font-size: 14px;
    color: white;
    background: #212121;
    border-radius: 5px;
    border: none;
    font-weight: 500;
    text-transform: uppercase;
    margin-bottom: 20px;
  }
</style>

<section class="section_form">
  <form
    id="consultation-form"
    class="feed-form"
    action="/users/reset-forgot-password/<%= resetToken %>"
    method="post"
  >
    <input
      name="new_password"
      required
      placeholder="New Password"
      type="password"
    />
    <input
      name="confirm_password"
      required
      placeholder="Confirm Password"
      type="password"
    />
    <button class="button_submit">Reset!</button>
  </form>
</section>

<script>

  <% if(flash.success && flash.success.length > 0) {%>

    new Noty({
    theme:'relax',
    text: '<%= flash.success %>',
    type:'success',
    layout:'topRight',
    timeout:1500
    }).show();

  <%}%>

  <% if(flash.error && flash.error.length > 0) {%>

    new Noty({
    theme:'relax',
    text: '<%= flash.error %>',
    type:'error',
    layout:'topRight',
    timeout:1500
    }).show();

    <%}%>
</script>
